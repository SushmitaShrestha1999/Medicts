@model Medict.Models.Product

@{
    ViewData["Title"] = "Create";
}


<h4>Add New Product</h4>
<hr />
<hr />

<form asp-action="Create" enctype="multipart/form-data" asp-controller="Product" method="post" >
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" name="Name" placeholder="Enter Product Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <hr />
        <hr />

        <div class="form-group col-md-6"> 
            <label asp-for="CategoryId">Category</label>
            <select class="form-control mr-sm-2" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.CategoryList,"CategoryId","Name"))">
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>


        <div class="form-group col-md-6">
            <label asp-for="BrandId">Brand </label>
            <select class="form-control mr-sm-2" asp-for="BrandId" asp-items="@(new SelectList(ViewBag.BrandList,"BrandId","Name"))">
            </select>
        </div>

        <div class="form-group col-md-6">
            <label asp-fo="Quantity">Quantity</label>
            <input type="text" class="form-control" asp-for="Quantity">
        </div>

        <div class="form-group  col-md-6">
            <label asp-for="Price">Price</label>
            <input type="text" class="form-control" asp-for="Price">
        </div>

        <div class="form-group col-md-6">
            <label asp-for="Discount"> Discount</label>
            <input type="text" class="form-control" asp-for="Discount">
        </div>

    <div class="form-group  col-md-6">
        <label asp-for="Image" class="col-sm-2 col-form-label"></label>
        <div class="custom-file">
            <label  class="custom-file-label">Image</label>
            <input asp-for="Image" class="form-control custom-file-input" type="file">
        </div>
    </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="ShotrtDescription"> Short Description</label>
            <textarea type="text" class="form-control" asp-for="ShotrtDescription" placeholder="Write short description about this product"></textarea>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-md-12">
            <label asp-for="LongDescription"> Long Description</label>
            <textarea type="text" class="form-control" asp-for="LongDescription" placeholder="Write long description about this product"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@model Medict.Models.Medicine

@{
    ViewData["Title"] = "Medicine";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Au Register Forms by Colorlib</title>

    <!-- Icons font CSS-->

    <link href="~/Medicine/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link href="~/Medicine/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Vendor CSS-->

    <link href="~/Medicine/vendor/select2/select2.min.css" rel="stylesheet" />

    <link href="~/Medicine/vendor/datepicker/daterangepicker.css" rel="stylesheet" />

    <!-- Main CSS-->

    <link href="~/Medicine/css/main.css" rel="stylesheet" />
</head>

<body>
    <div class="page-wrapper bg-gra-03 p-t-30 p-b-40">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title"> Add New Medicine </h2>
                </div>
                <div class="card-body">
                    <form method="POST" asp-action="Create">

                        <div class="form-row">
                            
                            <div class="input-group">
                                <label asp-for="Name"><b>Medicine Name</b></label>
                               
                                <input class="input--style-5" type="text" name="Name"  placeholder="Enter Product Name">
                            </div>
                            
                        </div>
                        <div class="form-row">
                           
                            <div class="input-group">
                                <label asp-for="CompanyName"><b>Company Name</b></label>
                                <input class="input--style-5" type="text" name="CompanyName" placeholder="Enter Company Name">
                            </div>
                            
                        </div>
                        <div class="form-row">
                           
                            <div class="input-group">
                                <label asp-for="Email"><b>Email</b></label>
                                <input class="input--style-5" type="Email" name="Email" placeholder="Enter your email-add">
                            </div>
                            
                        </div>
                        <div class="form-row">
                           
                            <div class="input-group">
                                <label asp-for="CategoryId"><b>Category</b></label>
                                <select class="form-control mr-sm-2" asp-for="CategoryId"  >
                                </select>
                            </div>
                            
                        </div>
                        <div class="form-row">
                            
                            <div class="input-group">
                                <label asp-for="BrandId"><b>Brand</b></label>
                                <select class="form-control mr-sm-2" asp-for="BrandId"  >
                                </select>
                            </div>
                           
                        </div>
                        <div class="form-row">
                            
                            <div class="input-group">
                                <label asp-for="Quantity"><b>Quantity</b></label>
                                <input class="input--style-5" type="text" name="Quantity" placeholder="How much medicine do you want to sell?">
                            
                            </div>
                        </div>
                        <div class="form-row">
                           
                            <div class="input-group">
                                <label asp-for="Price"><b>Price</b></label>
                                <input class="input--style-5" type="text" name="Price">
                            </div>
                            
                        </div>
                        <div class="form-row">
                           
                            <div class="input-group">
                                <label asp-for="Description"><b>Short Description</b></label>
                                <input class="input--style-5" type="text" name="Description" placeholder="Write short description about medicine">
                            </div>
                            
                        </div>



                        <div class="form-row p-t-20">
                            <label class="label label--block">Are you an existing customer?</label>
                            <div class="p-t-15">
                                <label class="radio-container m-r-55">
                                    Yes
                                    <input type="radio" checked="checked" name="exist">
                                    <span class="checkmark"></span>
                                </label>
                                <label class="radio-container">
                                    No
                                    <input type="radio" name="exist">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <div>
                            <button class="btn btn--radius-2 btn--red" type="submit">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->

    <script src="~/Medicine/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->

    <script src="~/Medicine/vendor/select2/select2.min.js"></script>

    <script src="~/Medicine/vendor/datepicker/moment.min.js"></script>
    <script src="~/Medicine/vendor/datepicker/daterangepicker.js"></script>
    <!-- Main JS-->
    <script src="~/Medicine/js/global.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->


</html>
<!-- end document-->